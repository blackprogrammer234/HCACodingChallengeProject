<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_black">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey"
                >
                <TextView
                    android:id="@+id/stack_question_title_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:textColor="@color/white"
                    android:text="@string/title_of_the_sample_question"
                    app:layout_constraintTop_toTopOf="parent">
                </TextView>
                <TextView
                    android:id="@+id/created_by_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="30dp"
                    android:text="@string/created_by_sample_question"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/stack_question_title_view">
                </TextView>
                <TextView
                    android:id="@+id/answer_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="30dp"
                    android:text="@string/answers_count_for_sample_question"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/created_by_view">
                </TextView>
                <TextView
                    android:id="@+id/accepted_answer_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="5dp"
                    android:text="@string/accepted_answers_for_sample_question"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/answer_view">
                </TextView>
                <TextView
                    android:id="@+id/body_question_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="5dp"
                    android:text="@string/sample_question_body"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/accepted_answer_view">
                </TextView>
                <TextView
                    android:id="@+id/body_answer_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="5dp"
                    android:text="@string/anwsers_to_the_sample_question"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/body_question_view">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>